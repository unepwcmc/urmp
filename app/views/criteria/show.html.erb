<div id="main">
  <%= link_to "< Back to Principles", principles_path, :class => 'criterion_back' if false %>

  <% if @criterion.principle.number == 0 %>
    <h2>All Principles</h2>
  <% else %>
    <h2>Principle <%= @criterion.principle.number %></h2>
  <% end %>
  <p><%= @criterion.principle.description unless @criterion.principle.description.nil?%></p>
  <h1>Criterion <%= @criterion.number %></h1>
  <p><%= @criterion.description %></p>
  <p><strong>Resources:</strong></p>
  <!-- content -->
  <div id="content">
    <ul class="topic-list">
      <%
        @resource_links.each do |resource_link|
          resource = resource_link.resource
      %>
        <li>
          <h4><%= resource.title %></h4>
          <span class="authors"><span>Authors:</span> <%= resource.author %></span>
          <div class="resource-underbar">
            <ul class="item-list">
              <li>Publication date: <span><%= resource.resource_date.present? ? resource.resource_date : ' ' %></span></li>
              <li>Institution: <span><%= resource.institution.present? ? resource.institution : ' ' %></span></li>
            </ul>
            <ul class="ico-list">
              <% if resource.made_by_un_redd? %>
                <li><span class="un-redd">UN-REDD</a></li>
              <% end %>
              <% type = resource.resource_type.try(:name).to_s.downcase %>
              <% if ['guidance','tool'].include?(type) %>
                <li><span class="<%= type %>"><%= type.humanize %></span></li>
              <% end %>
            </ul>
          </div>
          <div class="section">
            <p>
              <% if resource_link.numeric_reference.present? %>
                <strong><%= resource_link.numeric_reference %></strong>:
              <% end %>
              <%= resource_link.reference %>
            </p>
            <div class="row">
              <%= link_to "Download", resource_link.resource.link, :class => "download" %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
