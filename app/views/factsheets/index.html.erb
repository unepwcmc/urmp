<h1 class="header">Factsheets</h1>
<article class="wide">
  <p>These factsheets identify the uses and limitations of individual tools and resources for planning for multiple benefits for REDD+</p>

  <% @factsheets.each do |theme, factsheets| %>
    <h3><%= name_for_theme(theme) %></h3>

    <ul class='factsheets'>
      <% factsheets.each do |factsheet| %>
        <li>
        <div class='file'>
          <%= link_to(image_tag('file.png', :alt => factsheet.name)) %>
        </div>
          <%= link_to factsheet.name, factsheet_path(factsheet) %>
        </li>
      <% end %>
    </ul>
    <div class="clearfix"></div>
  <% end %>

</article>
