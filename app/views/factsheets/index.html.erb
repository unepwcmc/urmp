<% content_for :main do %>
  <h1 class="header"><%= t('site.factsheets.header') %></h1>
  <article class="wide">
    <p><%= t('site.factsheets.description') %></p>

    <ul>
    <% @factsheets.each do |factsheet| %>
      <li>
        <%= link_to factsheet.name.capitalize, factsheet_path(factsheet) %>
      </li>
    <% end %>
    </ul>
  </article>
<% end %>

<% content_for :sidebar do %>
   <%= render :partial => '/shared/sidebar' %>
<% end %>
