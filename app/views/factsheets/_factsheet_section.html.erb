<h3><%= name_for_theme(theme) %></h3>

<table class='factsheets'>
  <% factsheets.in_groups_of(4) do |factsheets_group| %>
    <tr>
      <% factsheets_group.compact.each do |factsheet| %>
        <td class="item">
          <%= link_to(image_tag('file.png', :alt => factsheet.name), factsheet_path(factsheet), :class => 'file') %>

          <%= link_to factsheet.name, factsheet_path(factsheet) %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
